@model DualPrep.Models.Meal

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="DP-AboutCreate">Create</h1>

<h4 class="DP-AboutCreate">Meal</h4>
<p class="DP-AboutCreate">Use this form to add your favorite meals.</p>
<hr />
<div class="DP-FormContainer">
    <div class="DP-CreateForm">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="DP-TextDanger"></div>
            <div class="DP-FormLine">
                <label asp-for="Name" class="DP-CreateLabel"></label>
                <input asp-for="Name" class="DP-CreateInput" />
                <span asp-validation-for="Name" class="DP-TextDanger"></span>
            </div>
            <div class="DP-FormLine">
                <label asp-for="Summary" class="DP-CreateLabel"></label>
                <input asp-for="Summary" class="DP-CreateInput" />
                <span asp-validation-for="Summary" class="DP-TextDanger"></span>
            </div>
            <div class="DP-FormLine">
                <label asp-for="Ingredients" class="DP-CreateLabel"></label>
                <textarea asp-for="Ingredients" class="DP-CreateInput"></textarea>
                <span asp-validation-for="Ingredients" class="DP-TextDanger"></span>
            </div>
            <div class="DP-FormLine">
                <label asp-for="Directions" class="DP-CreateLabel"></label>
                <textarea asp-for="Directions" class="DP-CreateInput"></textarea>
                <span asp-validation-for="Directions" class="DP-TextDanger"></span>
            </div>
            <div class="DP-FormLine">
                <label asp-for="PrepTime" class="DP-CreateLabel"></label>
                <input asp-for="PrepTime" class="DP-CreateInput" />
                <span asp-validation-for="PrepTime" class="DP-TextDanger"></span>
            </div>
            <div class="DP-FormLine">
                <label asp-for="CookTime" class="DP-CreateLabel"></label>
                <input asp-for="CookTime" class="DP-CreateInput" />
                <span asp-validation-for="CookTime" class="DP-TextDanger"></span>
            </div>
            <div class="DP-FormLine">
                <label asp-for="Author" class="DP-CreateLabel"></label>
                <input asp-for="Author" class="DP-CreateInput" />
                <span asp-validation-for="Author" class="DP-TextDanger"></span>
            </div>
            <div class="DP-FormLine">
                <input type="file" name="file" id="file" class="DP-CreateSubmit" />
            </div>
            <div class="DP-FormLine">
                <input type="submit" value="Create" class="DP-CreateSubmit" />
                <a asp-action="Index" class="DP-CreateBack">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
