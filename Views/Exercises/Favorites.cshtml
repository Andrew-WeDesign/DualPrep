@model DualPrep.Models.ExerciseViewModels.FavoriteData

@{
    ViewData["Title"] = "Favorites";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="DP-FavePage">
    <h1>
        My Favorites
    </h1>
    <div class="DP-FaveList">
        @foreach (var item in Model.ExerciseFavorites)
        {
            <a asp-action="Details" asp-route-id="@item.Exercise.Id">
                <p>@Html.DisplayFor(modelItem => item.Exercise.Name)</p>
            </a>
            <form asp-action="Favorites" asp-route-id="@item.Id" method="post">
                @*<input type="hidden" asp-route-id="MealFavorites" />*@
                <input type="submit" value="Remove Favorite" class="btn btn-danger" />
            </form>
        }
    </div>
</div>

