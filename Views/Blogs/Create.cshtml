@model DualPrep.Models.Blog

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="DP-AboutCreate">Create</h1>

<h4 class="DP-AboutCreate">Blog</h4>
<p class="DP-AboutCreate">Use this form to add your favorite blogs..</p>
<hr />
<div class="DP-FormContainer">
    <div class="DP-CreateForm">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="DP-TextDanger"></div>
            <div class="DP-FormLine">
                <label asp-for="Title" class="DP-CreateLabel"></label>
                <input asp-for="Title" class="DP-CreateInput" />
                <span asp-validation-for="Title" class="DP-TextDanger"></span>
            </div>
            <div class="DP-FormLine">
                <label asp-for="Summary" class="DP-CreateLabel"></label>
                <input asp-for="Summary" class="DP-CreateInput" />
                <span asp-validation-for="Summary" class="DP-TextDanger"></span>
            </div>
            <div class="DP-FormLine">
                <label asp-for="Body" class="DP-CreateLabel"></label>
                <textarea asp-for="Body" class="DP-CreateInput"></textarea>
                <span asp-validation-for="Body" class="DP-TextDanger"></span>
            </div>
            <div class="DP-FormLine">
                <label asp-for="TLDR" class="DP-CreateLabel"></label>
                <textarea asp-for="TLDR" class="DP-CreateInput"></textarea>
                <span asp-validation-for="TLDR" class="DP-TextDanger"></span>
            </div>
            <div class="DP-FormLine">
                <input type="file" name="file" id="file" class="DP-CreateSubmit" />
            </div>
            <div class="DP-FormLine">
                <input type="submit" value="Create" class="DP-CreateSubmit" />
                <a asp-action="Index" class="DP-CreateBack">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
